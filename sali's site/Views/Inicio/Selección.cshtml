<style>

    #listado_modulos {
        display: none;
        width: 100px;
        height: 100px;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
        text-align: center;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }

    #usuario {
        display: none;
        background-color: white;
        opacity: 0.5;
        border: 3px solid white;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 999;
        width: 100%;
        height: 23px;
        text-align: center;
        transition: 0.3s;
        font-weight: bold;
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
        outline: none;
    }

        #usuario:hover {
            opacity: 1.0;
            cursor: pointer;
            transition: 0.3s;
            outline: none;
        }

    .modulos {
        color: white;
        font-size: 200px;
        margin-left: 200px;
        outline: none;
        transition: 0.3s;
        outline: none;
    }

        .modulos:hover {
            color: gray;
            transition: 0.3s;
            outline: none;
        }

    .tippy-tooltip {
        font-size: 1.5rem;
        padding: 0.3rem 0.6rem;
    }

    a:hover {
        color: gray;
        cursor: pointer;
    }

    body {
        background-color: black;
    }

    #input_username {
        margin-top: 10px;
    }

    #input_username, #input_password {
        width: 100%;
        margin-bottom: 10px;
        margin-left: 56px;
    }

    #form_login {
        display: none;
        border-radius: 5px;
        background-color: white;
        width: 400px;
        height: 110px;
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        margin: auto;
        z-index: 1000;
    }

    #user_details .modal-body {
        overflow: auto;
    }

    .avatar {
        float: left;
        width: 50%;
        height: 50%;
    }

    #contenedor_datos {
        margin-top: 15%;
        float: right;
    }
</style>

@{
    ViewBag.Title = "sali's site";
}

<span id="usuario" data-toggle="modal" data-target="#user_details"></span>

<div class="modal fade" id="user_details" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">

            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                <button type="button" id="cerrar_sesion" class="btn btn-danger">Cerrar Sesión</button>
            </div>
        </div>
    </div>
</div>

<div id="form_login">
    <input type="text" id="input_username" class="form-control" placeholder="Usuario..." />
    <input type="password" id="input_password" class="form-control" placeholder="Contraseña...">
    <button type="submit" id="formulario_login" class="btn btn-primary btn-lg" style="width:100%;"><span class="glyphicon glyphicon-user"></span>   Iniciar Sesion</button>
</div>

<div id="listado_modulos">
</div>

<script>
    var is_logged = '@User.Identity.IsAuthenticated'.toLowerCase() === 'true';
</script>

